/var/log/cron
/var/log/maillog
/var/log/secure
/var/log/spooler
/var/log/daemon.log
/var/log/boot.log
/var/log/auth.log
/var/log/kern.log
/var/log/firewalld
{
    daily
    rotate 31
    compress
    delaycompress
    notifempty
    create 640 root
    sharedscripts
    postrotate
	/bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
   
}
